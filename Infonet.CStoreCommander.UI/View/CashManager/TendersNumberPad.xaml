<Page x:Class="Infonet.CStoreCommander.UI.View.CashManager.TendersNumberPad"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Infonet.CStoreCommander.UI.View.CashManager"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="using:Infonet.CStoreCommander.UI.Controls"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <controls:NumberPad IsAdditionEnabled="False"
                        IsSubtractionEnabled="False"
                        x:Uid="TenderAmount"
                        IsDollarVisible="Visible"
                        BackNavigation="{x:Bind CashDropVM.SecondFrameBackNavigationCommand, Mode=OneWay}"
                        CashButtonItemSource="{x:Bind CashDropVM.CashButtons, Mode =OneWay}"
                        EnterTappedCommand="{x:Bind CashDropVM.SetTenderAmountCommand, Mode=OneWay}" />

</Page>
