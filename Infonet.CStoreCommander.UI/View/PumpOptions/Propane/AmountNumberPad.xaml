<Page x:Class="Infonet.CStoreCommander.UI.View.PumpOptions.Propane.AmountNumberPad"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Infonet.CStoreCommander.UI.View.PumpOptions.Propane"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="using:Infonet.CStoreCommander.UI.Controls"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <controls:NumberPad IsAdditionEnabled="False"
                        IsSubtractionEnabled="False"
                        x:Uid="setAmount"
                        IsDollarVisible="Visible"
                        BackNavigation="{x:Bind PropaneGradeVM.NumberPadClearCommand, Mode=OneWay}"
                        CashButtonItemSource="{x:Bind PropaneGradeVM.CashButtons, Mode =OneWay}"
                        EnterTappedCommand="{x:Bind PropaneGradeVM.SetAmountCommand, Mode=OneWay}" />
</Page>
