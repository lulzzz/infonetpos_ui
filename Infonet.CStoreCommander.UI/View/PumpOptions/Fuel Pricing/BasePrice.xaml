                <toolsKit:DataGridTextColumn Width="8*"
                                             FontSize="11"
                                             IsEdit="False"
                                             MaxCharacterLength="16"
                                             TextAlignment="Left"
                                             CanSort="False"
                                             Foreground="{StaticResource LabelTextForegroundColor}"
                                             Binding="{Binding Grade}"
