                                             NumericKeyType="Amount"
                                             InputScope="Number"
                                             Foreground="{StaticResource LabelTextForegroundColor}"
                                             Binding="{Binding TaxExemptedCreditPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NothingConverter}}"
