                           FocusOnEditableRow="{x:Bind BasePricesVM.FocusOnNewRow, Mode=OneWay}"
                           UpdateOnlyOnEnter="True"
                           Grid.Row="1"
                           ItemsSource="{x:Bind BasePricesVM.FuelPrices.Prices, Mode=OneWay}">

            <toolsKit:DataGrid.Columns>
